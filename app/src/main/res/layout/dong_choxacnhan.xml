<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dong_lichsu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_coner"
    android:elevation="8dp"
    android:translationZ="4dp">

    <TextView
        android:id="@+id/ten_cuahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Thanh Mai Garage"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ten_cuahang"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imgCuaHang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/cuahang1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dịch vụ"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/dichvu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Vá săm lốp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày đặt"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/ngaydat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/10/2024"
                        android:layout_below="@+id/tv1"
                        android:textColor="@color/black" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái:"
                    android:layout_marginLeft="10dp"
                    android:textColor="#27872C" />

                <TextView
                    android:id="@+id/trangthai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành công "
                    android:layout_toRightOf="@+id/tv2"
                    android:layout_marginLeft="5dp"
                    android:textColor="#27872C" />

                <!-- Nút hủy -->
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:text="Hủy"
                    android:backgroundTint="#EFD54141"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
