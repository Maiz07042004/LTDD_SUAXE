<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    >


    <ImageView
        android:id="@+id/imageView_icon_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="153dp"
        android:background="@drawable/person_log_regis"
        android:padding="10dp"
        android:src="@drawable/person_log_regis_ic" />

    <TextView
        android:id="@+id/textview_dangki_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_icon_person"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="sans-serif-black"
        android:text="Đăng ký cửa hàng"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView_noidung"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_dangki_cuahang"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="44dp"
        android:gravity="center"
        android:text="Vui lòng điền thông tin chi tiết và tài khoản cửa hàng của bạn"
        android:textColor="@color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/textViewmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:fontFamily="sans-serif-black"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textViewxnmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:fontFamily="sans-serif-black"
        android:text="Xác nhận mật khẩu"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/textViewemail_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextxnmatkhau_cuahang"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:fontFamily="sans-serif-black"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextemail"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textViewemail_cuahang"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="116dp"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textViewtaikhoan_cuahang"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="115dp"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewtaikhoan_cuahang"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView_noidung"
        android:layout_alignParentStart="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Tài khoản"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextxnmatkhau_cuahang"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textViewxnmatkhau"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="116dp"
        android:ems="10"
        android:inputType="textPassword" />



    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textViewmatkhau"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="115dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_tieptuc_cuahang"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextemail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"
        android:background="@drawable/button_register_login"
        android:fontFamily="sans-serif-black"
        android:text="Tiếp tục" />

    <TextView
        android:id="@+id/textView_dangkitaikhoanuser_cuahang"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_tieptuc_cuahang"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="115dp"
        android:gravity="center"
        android:text="Đăng ký tài khoản người dùng?" />


</RelativeLayout>