<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#F0E68C">

    <ImageView
        android:id="@+id/imgKhachHang"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/image_user"
        android:scaleType="centerCrop"
        android:background="#FFD700"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/> <!-- Căn giữa theo chiều dọc -->


    <TextView
        android:id="@+id/ten_khachhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trần Công Hiếu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toEndOf="@id/imgKhachHang"
        android:layout_alignTop="@id/imgKhachHang"
        android:layout_marginStart="16dp"/>

    <RelativeLayout
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ten_khachhang"
        android:layout_alignStart="@id/ten_khachhang">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sđt:"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/sdt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0364933757"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/dichvu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sửa điện"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/textViewPhone"
        android:layout_alignStart="@id/ten_khachhang"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/dichvu"
        android:layout_alignStart="@id/ten_khachhang"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/diachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16 Võ Nguyên Giáp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/dichvu"
        android:layout_toRightOf="@+id/textViewAddress"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10px"/>

    <!-- Cải thiện phần thời gian -->
    <TextView
        android:id="@+id/textViewTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian:"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/diachi"
        android:layout_alignStart="@id/ten_khachhang"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/thoigian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/10/22"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_below="@id/diachi"
        android:layout_toRightOf="@+id/textViewTimeTitle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5px"/>
</RelativeLayout>
