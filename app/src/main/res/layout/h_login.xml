<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="142dp"
        android:background="@drawable/person_log_regis"
        android:padding="10dp"
        android:src="@drawable/person_log_regis_ic" />

    <TextView
        android:id="@+id/textview_dangki"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView10"
        android:textAlignment="center"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="sans-serif-black"
        android:text="Đăng nhập"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/textView_noidung"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_dangki"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="Vui lòng đăng nhập để tiếp tục sử dụng ứng dụng của chúng tôi"
        android:textColor="@color/black"
        android:textSize="15dp"

        />

    <TextView
        android:id="@+id/textViewtaikhoan"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_below="@+id/textView_noidung"
        android:layout_alignParentStart="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-black"
        android:text="Tài khoản"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/text_taikhoan"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtaikhoan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="text" />


    <TextView
        android:id="@+id/textViewmatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_taikhoan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"

        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-black"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/TextPassword"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewmatkhau"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="111dp"
        android:background="@drawable/button_register_login"
        android:fontFamily="sans-serif-black"
        android:text="Đăng nhập" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:text="Ghi nhớ mật khẩu
" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextPassword"
        android:layout_marginStart="87dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/checkBox"
        android:text="Quên mật khẩu ?"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView_dangkitaikhoan_login"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="93dp"
        android:text="Bạn chưa có tài khoản? Đăng ký" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="83dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Tài khoản cửa hàng"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textview_phu_loginuser"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="88dp"
        android:gravity="center"

        android:text="Hoặc kết nối với" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_phu_loginuser"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/instagram" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/twitter" />

        <!-- Thêm nhiều ImageView tùy ý -->
    </LinearLayout>


</RelativeLayout>