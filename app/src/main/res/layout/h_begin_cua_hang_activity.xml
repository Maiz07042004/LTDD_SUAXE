<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register">

    <ImageView
        android:id="@+id/background_begin_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/image2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewxinchao"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:layout_below="@+id/background_begin_cuahang"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Chào mừng đến thành viên kinh doanh"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_begin_cuahang" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewxinchao"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="-54dp"
        android:gravity="center"
        android:text="Tạo một tài khoản và truy \ncập hàng ngàn nội dung thú vị"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="434dp" />

    <TextView
        android:id="@+id/textView_dangnhap_cuahang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewxinchao"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="-226dp"
        android:gravity="center"
        android:text="Bạn đã tài khoản không? Đăng nhập"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/button_begin_cuahang"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="139dp"
        android:background="@drawable/button_register_login"
        android:text="Bắt đầu"
        android:fontFamily="sans-serif-black"/>


</RelativeLayout>